<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWeather" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white_100</item>
        <item name="colorOnPrimary">@color/black_100</item>
        <item name="colorOnBackground">@color/white_100</item>
        <item name="android:colorBackground">@color/black_100</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#C4C4C4</item>
        <item name="colorSecondary">#555555</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:fontFamily">@font/project_font</item>
        <item name="fontFamily">@font/project_font</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_100</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <item name="windowSplashScreenAnimationDuration">2000</item>

        <item name="postSplashScreenTheme">@style/Theme.SimpleWeather</item>
    </style>

    <style name="ShapeAppearance.ToggleButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>
</resources>
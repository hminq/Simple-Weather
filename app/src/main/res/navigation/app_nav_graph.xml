<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/permissionFragment">
    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.example.simpleweather.presentation.PermissionFragment"
        android:label="PermissionFragment"
        tools:layout="@layout/fragment_permission">
        <action
            android:id="@+id/action_permissionFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.simpleweather.presentation.WeatherFragment"
        android:label="WeatherFragment"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/action_weatherFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_permissionFragment"
            app:destination="@id/permissionFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.simpleweather.presentation.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>